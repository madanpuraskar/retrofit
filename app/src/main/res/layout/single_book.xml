<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:weightSum="1">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imgview"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:text="Title"
        android:textColor="#161616"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/imgview"
        android:layout_alignStart="@+id/imgview" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:text="TitleName"
        android:textColor="#161616"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:layout_alignBaseline="@+id/tv1"
        android:layout_alignBottom="@+id/tv1"
        android:layout_alignEnd="@+id/imgview" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv3"
        android:text="Author"
        android:textColor="#161616"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:layout_alignBaseline="@+id/tv4"
        android:layout_alignBottom="@+id/tv4"
        android:layout_alignStart="@+id/tv1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv4"
        android:text="AuthorName"
        android:textColor="#161616"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv2"
        android:layout_alignStart="@+id/tv2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv5"
        android:text="Publisher"
        android:textColor="#161616"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:layout_alignBaseline="@+id/tv6"
        android:layout_alignBottom="@+id/tv6"
        android:layout_alignStart="@+id/tv3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv6"
        android:text="PublisherName"
        android:textColor="#161616"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tv4"
        android:layout_alignStart="@+id/tv4"
        android:layout_marginStart="10dp" />
    <RelativeLayout
        android:id="@+id/footer5"
        android:layout_width="match_parent"

        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FOOTER"
            android:textSize="20sp"
            android:id="@+id/textView"
            android:textColor="#ffff"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</RelativeLayout>